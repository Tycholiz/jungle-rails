<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Reviews</dt>


          <% #url: {action: "create"} <--- not sure if needed as second param below 1 line %>
          <%= form_for [@product, @review], html: {class: "nifty_form"} do |f| %>
            <% #f.select :reviews, [['Hot','hot'],['Medium','medium'],['Cold','cold']] %>
            <%= f.text_area :description, size: "60x12" %>
            <%= f.submit "Create" %>
          <% end %>

          <dd>
            <% @reviews.each do |review| %>
              <% #render 'review' lets us use the following variables on the relevant partial %>
              <%= render 'review', rating: review.rating, description: review.description %>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>

  </article>

</section>
