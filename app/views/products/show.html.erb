<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Reviews</dt>


          <% #url: {action: "create"} <--- not sure if needed as second param below 1 line %>
          <%= form_for ([@product, @review]) do |f| %>
          <div class="review-description">
             <%= f.text_area :description, placeholder: "Leave a review for #{@product.name}!" %>
           </div>
           <div>
             <% f.select :rating, (1..5) %>
             <% if current_user %>
               <%= f.submit "Submit Review" %>
             <% end %>
           </div>
          <% end %>
          <% if @reviews.size > 0 %>
          <dd>
            <% @reviews.each do |review| %>
              <% #render 'review' lets us use the following variables on the relevant partial %>
              <%= render 'review', rating: review.rating, description: review.description %>
            <% end %>
          </dd>
          <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>
