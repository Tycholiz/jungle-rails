<% # we can use product and quantity here because they are defined in the show.html.erb %>
<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= product.price %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= product.price * quantity %>
  </td>
</tr>

